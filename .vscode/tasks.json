{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "[Compile]",
            "command": "./Makefile.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "[Run]",
            "command": "./Makefile.bat",
            "args": [
                "-r"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "[Compile & Run]",
            "command": "./Makefile.bat",
            "args": [
                "-cr"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "[Clean]",
            "command": "./Makefile.bat",
            "args": [
                "-c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}